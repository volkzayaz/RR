workspace '../RhythmicRebellion.xcworkspace'
project '../RhythmicRebellion.xcodeproj'

platform :ios, '10.0'
use_frameworks!
inhibit_all_warnings!

def base
  pod 'Firebase/Core'
  pod 'Alamofire', '~> 4.7'
  pod 'Mocker'
  
  pod 'RxCocoa', '~> 4.4'
  pod 'RxDataSources', '~> 3.1.0'
end

target 'RhythmicRebellionTests' do
    
    pod 'Nimble', '~> 7.0'
    base
    
end
    
target 'RhythmicRebellion' do

    base
    pod 'Fabric', '~> 1.9.0'
    pod 'Crashlytics', '~> 3.12.0'
    
    pod 'AlamofireImage', '~> 3.3'
    pod 'SwiftValidator', :git => 'https://github.com/jpotts18/SwiftValidator.git', :tag => '4.2.0'
    pod 'MaterialTextField', '~> 1.0'
    pod 'CloudTagView', '~> 3.0.0'
    pod 'NSStringMask'
    pod 'DownloadButton'

    #infrastructure
    pod 'Starscream', '3.0.5'
    pod 'R.swift', '5.0.3'
    pod 'RxReachability'
    pod 'AlamofireNetworkActivityLogger'
    
    #ui
    pod 'SnapKit', '~> 4.2.0'
    pod 'youtube-ios-player-helper', '~> 0.1.4'
    pod 'SwiftGifOrigin', '~> 1.7.0'
    pod 'XLActionController'
    pod 'FXBlurView'
    pod 'Parchment'
    
end

post_install do |installer|
    
    installer.pods_project.build_configurations.each do |config|
        config.build_settings.delete('CODE_SIGNING_ALLOWED')
        config.build_settings.delete('CODE_SIGNING_REQUIRED')
    end
    
    myTargets = ['EasyTipView']
    
    installer.pods_project.targets.each do |target|
        
        if myTargets.include? target.name
            target.build_configurations.each do |config|
                config.build_settings['SWIFT_VERSION'] = '4.0'
            end
        end
        
    end
    
end
